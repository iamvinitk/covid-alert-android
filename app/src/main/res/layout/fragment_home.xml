<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toBottomOf="@id/filterButton"
        app:layout_constraintStart_toEndOf="@+id/yCoordinateTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/xCoordinateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last 7 days"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/barChart"
        app:layout_constraintStart_toStartOf="@id/barChart"
        app:layout_constraintEnd_toEndOf="@id/barChart" />

    <TextView
        android:id="@+id/yCoordinateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:rotation="-90"
        android:text="Connected persons"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/barChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_filter"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
